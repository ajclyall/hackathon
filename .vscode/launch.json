    "version": "0.2.0",
    "configurations": [
        {
            "name": "Desktop Runner",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "gulp-build-desktop",
            "program": "${workspaceFolder}/Runners/Desktop/bin/Debug/Pixel Vision 8.dll",
            "cwd": "${workspaceFolder}/",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "CSharp Runner",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "gulp-build-chsarp",
            "program": "${workspaceFolder}/Runners/CSharpRunner/bin/Debug/CSharp Runner.dll",
            "cwd": "${workspaceFolder}/",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Lua Runner",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "gulp-build-lua",
            "program": "${workspaceFolder}/Runners/LuaRunner/bin/Debug/Lua Runner.dll",
            "cwd": "${workspaceFolder}/",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Roslyn Runner",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "gulp-build-roslyn",
            "program": "${workspaceFolder}/Runners/RoslynRunner/bin/Debug/Roslyn Runner.dll",
            "cwd": "${workspaceFolder}/",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ]
}